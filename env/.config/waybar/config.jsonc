{
    "layer": "top",
    "position": "left",
    "width": 6,
    // "output": "eDP-1",
    // "margin": "2 2 2 2",
    "spacing": 2,
    // "margin-left": 5,
    // "margin-top": 5,
    // "margin-bottom": 5,
    "modules-left": [
        "battery",
        "custom/mode",
        "custom/sep",
        "clock",
        "custom/sep",
        "pulseaudio",
        "custom/sep",
        "hyprland/language"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "tray",
        "custom/sep"
    ],
    "custom/power": {
        "rotate": 90,
        "format": "パワー",
        "on-click": "wlogout"
    },
    "custom/pron": {
        "rotate": 90,
        "format": "Pr0n : {}",
        "exec": "~/.config/waybar/scripts/pron-size.sh",
        "interval": 1000
    },
    "custom/music": {
        "rotate": 270,
        "format": "{}",
        "exec": "~/.config/waybar/scripts/caway",
        "return-type": "text",
        "on-click": "playerctl play-pause",
        "max-length": 35
    },
    "custom/sep": {
        "format": "--"
    },
    "hyprland/workspaces": {
        "format": " \n{name}\n ",
        "on-click": "activate",
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1"
    },
    "hyprland/window": {
        "rotate": 90,
        "format": "{} ",
        "max-length": 30
    },
    "hyprland/language": {
        "format": "{}",
        "format-en": "EN",
        "format-fr": "CA",
        "format-de": "DE",
        "format-pl": "PL"
    },
    "clock": {
        "tooltip": true,
        "format": "{:%m\n%d\n--\n%H\n%M}",
        "tooltip-format": "{:%Y-%m-%d}"
    },
    "tray": {
        "icon-size": 18,
        "show-passive-items": "true"
    },
    "temperature": {
        "rotate": 90,
        "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
        "critical-threshold": 80,
        "format": "{icon} {temperatureC}°C",
        "format-icons": [
            "",
            "",
            ""
        ]
    },
    "pulseaudio": {
        // "rotate": 90,
        "format": "{volume}",
        "format-bluetooth": "{volume}%",
        "format-muted": "MUTE",
        "format-icons": {
            "default": [
                "",
                ""
            ]
        },
        "scroll-step": 2,
        "on-click": "hyprctl dispatch exec pavucontrol",
        "on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle"
    },
    "battery": {
        "rotate": 90,
        "format": " {capacity} bt "
    },
    "custom/mode": {
        "rotate": 90,
        "exec": "powerprofilesctl get",
        "interval": 5
    }
}
